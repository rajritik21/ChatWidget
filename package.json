{
  "name": "chatbot-widget-cdn",
  "version": "1.0.0",
  "description": "A modern AI-powered chat widget that can be embedded anywhere",
  "type": "module",
  "main": "dist-widget/chatbot-widget.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:widget": "vite build --config vite.widget.config.js",
    "build:cdn": "npm run build:widget && npm run build:demo",
    "build:demo": "vite build --config vite.demo.config.js",
    "preview": "vite preview --config vite.demo.config.js",
    "preview:widget": "vite preview --config vite.widget.config.js",
    "deploy": "npm run build:cdn && gh-pages -d dist-demo"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.11",
    "preact": "^10.19.2",
    "tailwindcss": "^4.1.11"
  },
  "devDependencies": {
    "@preact/preset-vite": "^2.10.2",
    "autoprefixer": "^10.4.21",
    "gh-pages": "^6.3.0",
    "vite": "^5.2.0",
    "vite-plugin-css-injected-by-js": "^3.5.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rajritik21/ChatWidget.git"
  },
  "keywords": [
    "chatbot",
    "widget",
    "ai",
    "preact",
    "cdn",
    "embed"
  ],
  "author": "rajritik21",
  "license": "MIT",
  "homepage": "https://rajritik21.github.io/ChatWidget/"
}
